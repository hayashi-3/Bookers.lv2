<!-- フォロワー一覧 -->
<div class="container">
    <h2>Follower Users</h2>
    <% if @users.present? %>
    <table class="table">
            <thead>
            <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
                <% @user.followers.where.not(id: current_user.id).each do |user| %>
                    <tr>
                      <td><%= attachment_image_tag user, :profile_image , fallback: "no_image.jpeg", size: '40x40'%>
                          <br>
                          <%= user.name %>
                      </td>
                          <td><%= "フォロー数: #{user.followings.count}" %></td>
                          <td><%= "フォロワー数: #{user.followers.count}" %></td>
                          <td><%= link_to "show", user_path(user) %></td>
                    <% end %>
                    <% else %>
                    <td>ユーザーはいません。</td>
                  <% end %>
            </tr>
        </tbody>
    </table>
</div>