<% unless current_user == user %>
<% if current_user.following?(user) %>
  <%= link_to "Unfollow", relationship_path(@user), class: 'btn btn-danger btn-block', method: :delete %>
<% else %>
  <%= link_to "Follow", relationships_path(@user),method: :post, class: 'btn btn-primary btn-block' %>
<% end %>
<% end %>