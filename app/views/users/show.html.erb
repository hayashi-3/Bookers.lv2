<%=flash[:notice] %>
<!-- 投稿内容 -->
    <div class="container">
    <div class="row">
      <div class="col-xs-4">
      <%= render 'books/book',book: @book,user: @user %>
        </div>
        <div class="col-xs-8">
            <h3>Books</h3>
        <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
        </thead>
        <!-- 繰り返し表示 -->
        <tbody>
          <% @user.books.each do |book| %>
        <tr>
            <th><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpeg", size: '100x100'%></th>
        <!-- リンク -->
            <th>
            <%= link_to book.title, book_path(book.id) %></th>
            <th><%= book.body %></th>
        </tr>
        <% end %>
        </tbody>
        </table>
    </div>
    </div>
    </div>