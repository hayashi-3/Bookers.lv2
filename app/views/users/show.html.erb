<%=flash[:notice] %>
<!-- 投稿内容 -->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/profile',user: @user %>
      <%= render 'relationships/follow_button',user: @user %>
      <%= render 'books/post',book: @book %>
    </div>
    <div class="col-xs-9">
      <h3>Books</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <!-- 繰り返し表示 -->
        <tbody>
        <% @user.books.each do |book| %>
          <tr>
              <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpeg", size: '40x40'%></td>
            <!-- リンク -->
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><%= "#{book.book_comments.count} コメント" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>