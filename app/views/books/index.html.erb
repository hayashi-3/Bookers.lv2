<%=flash[:notice] %>
<!-- 投稿内容 -->
    <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= render 'books/book',book: @book,user: @user %>
        </div>
        <div class="col-xs-9">
            <h3>Books</h3>
        <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <!-- 繰り返し表示 -->
        <% @books.each do |book| %>
        <tr>
            <th><%= link_to user_path(book.user.id) do %><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpeg", size: '100x100'%>
                <% end %>
            </th>
            <th>
            <%= link_to book.title, book_path(book.id) %></th>
            <th><%= book.body %></th>
        </tr>
        <% end %>
        </tbody>
        </table>
      </div>
    </div>
    </div>