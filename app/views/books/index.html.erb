<%=flash[:notice] %>
<!-- 投稿内容 -->
    <div class="container">
    <div class="row">
      <div class="col-xs-5">
        <%= render 'books/book',book: @book,user: @user %>
        </div>
        <div class="col-xs-7">
            <h3>Books</h3>
        <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <!-- 繰り返し表示 -->
        <% @books.each do |book| %>
        <tr>
            <th><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpeg", size: '200x200'%></th>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
            <th><%= link_to "Show","/books/#{book.id}"%></th>
        </tr>
        <% end %>
        </tbody>
        </table>
      </div>
    </div>
    </div>