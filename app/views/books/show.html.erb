<!DOCTYPE html>
<html>
<head>
<script src="https://kit.fontawesome.com/0c5d92a319.js" crossorigin="anonymous"></script>
</head>
<%= flash[:notice] %>
    <div class="container">
    <div class="row">
      <div class="col-xs-3">
      <%= render 'books/book',book: @book,user: @book_show.user %>
        </div>
        <div class="top"></div>
        <div class="col-xs-9">
            <h2>Book detail</h2>
        <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td><%= link_to user_path(@book_show.user.id) do %><%= attachment_image_tag @book_show.user, :profile_image , fallback: "no_image.jpeg", size: '40x40'%>
                <% end %><br>
                <%= link_to user_path(@book_show.user.id) do %><%= @book_show.user.name %>
                <% end %>
            </td>
                  <th><%= @book_show.title %></th>
                  <th><%= @book_show.body %></th>
                <% if @book_show.user.id == current_user.id %>
                  <th><%= link_to "Edit", edit_book_path(@book_show), class: "btn btn-success" %></th>
                  <th><%= link_to "Destroy",book_path(@book_show), method: :delete, class: "btn btn-danger" %></th>
                <% end %>
        </tr>
<!-- bookcommentここから -->
<ol>
  <% @book_show.book_comments.each do |book_comment| %></th>
    <li class="comment"></li>
      <div class="comment-body bb">
          <div class="comment-avatar">
          <div class="avatar">
            <%= link_to user_path(@book_show.user.id) do %><%= attachment_image_tag @book_comment.user, :profile_image , fallback: "no_image.jpeg", size: '40x40'%>
                <% end %><br>
          </div>
        </div>
        <div class="comment-text">
          <div class="comment-author clearfix">
            <%= link_to user_path(@book_show.user.id) do %><%= book_comment.user.name %>
            <% end %>
          </div>
          <div class="comment-entry"><%= book_comment.comment %></div>
          <% if @book_show == current_user %>
            <div>
              <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
          <% end %>
            </div>
        </div>
      　</div>
    </li>
  <% end %>
</ol>
<!-- bookcommentここまで -->
<!-- コメント投稿フォーム -->
  <tr><%= form_for [@book_show, @book_comment] do |f| %>
      <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    </div>
  </div>
  <%= f.submit "送信" %>
  <% end %>
  </tr>
<!-- コメント投稿フォーム　ここまで -->
    </tbody>
    </table>
  </div>
</div>
</div>
</html>