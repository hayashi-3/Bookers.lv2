<!DOCTYPE html>
<html>
<head>
<script src="https://kit.fontawesome.com/0c5d92a319.js" crossorigin="anonymous"></script>
</head>
<%= flash[:notice] %>
    <div class="container">
    <div class="row">
      <div class="col-xs-3">
      <%= render 'books/book',book: @book,user: @book_show.user %>
        </div>
        <div class="top"></div>
        <div class="col-xs-9">
            <h2>Book detail</h2>
        <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td><%= link_to user_path(@book_show.user.id) do %><%= attachment_image_tag @book_show.user, :profile_image , fallback: "no_image.jpeg", size: '40x40'%>
                <% end %><br>
                <%= link_to user_path(@book_show.user.id) do %><%= @book_show.user.name %>
                <% end %>
            </td>
                  <td><%= @book_show.title %></td>
                  <td><%= @book_show.body %></td>
                <% if @book_show.user.id == current_user.id %>
                  <td><%= link_to "Edit", edit_book_path(@book_show), class: "btn btn-success" %></td>
                  <td><%= link_to "Destroy",book_path(@book_show), method: :delete, class: "btn btn-danger" %></td>
                <% end %>
                <!-- いいね機能 -->
                <% if @book_show.favorited_by?(current_user) %>
                  <td>
                    <%= link_to book_favorites_path(@book_show), method: :delete do %>
                    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                    <%= @book_show.favorites.count %>
                    <% end %>
                  </td>
                <% else %>
                  <td>
                    <%= link_to book_favorites_path(@book_show), method: :book do %>
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                    <%= @book_show.favorites.count %>
                    <% end %>
                  </td>
                <% end %>
                <!-- コメント数 -->
                  <td><%= link_to "#{@book.book_comments.count} コメント", book_path(@book_show) %></td>
        </tr>
<!-- bookcommentここから -->
        <tr>
        <td><% @book_show.book_comments.each do |book_comment| %>
            <%= attachment_image_tag @book_comment.user, :profile_image , fallback: "no_image.jpeg", size: '40x40'%>
            <br>
                <%= book_comment.user.name %>
                <%= book_comment.comment %>
            <% if book_comment.user == current_user %>
              <%= link_to "destroy", book_book_comments_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
            <% end %>
       <% end %></td>
     </tr>
<!-- bookcommentここまで -->
<!-- コメント投稿フォーム -->
      <% if @book_comment.errors.any? %>
        <div>
            <h2><%= pluralize(book_comment.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% book_comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  <tr>
    <td><%= form_for [@book_show, @book_comment] do |f| %>
      <%= f.text_area :comment, class: "col-xs-12",placeholder: "コメントをここに" %>
    </td>
    <td><%= f.submit "送信" %></td>
    <% end %>
  </tr>
<!-- コメント投稿フォーム　ここまで -->
    </tbody>
    </table>
  </div>
</div>
</div>
</html>