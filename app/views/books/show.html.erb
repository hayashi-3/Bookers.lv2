<%=flash[:notice] %>
<!-- 投稿内容 -->
<h1>Books</h1>
    <div class="container">
    <div class="row">
    <div class="col-lg-4">
<h2>Book detail</h2>
<div class="col-lg-8">
<table class="table table-defolt">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      <% @books.each do |book| %>
        <tr>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= link_to book.body, book_path(book.id) %></td>
      <% end %>
    </tr>
  </thead>

  <tbody>
  <% if user_signed_in? && current_user.id == @book.user_id %>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>
<br>
<% end %>

<%= render 'books/book',book: @book,user: @user %>